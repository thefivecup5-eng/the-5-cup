---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Accueil' },
  { href: '/competition', label: 'Compétition' },
  { href: '/social', label: 'Réseaux' }
];

const isActive = (href: string) => {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
};
---

<header class="bg-[#FFFEF8] py-3 border-b border-[#242424]/10 sticky top-0 z-50 shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-3">
        <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-gradient-to-br from-[#0A4A2E] to-[#10305D] flex items-center justify-center font-bold text-[#FFFEF8] shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
          <img src="/assets/logos-sans-fond/Lgo-T5C-blanc.png" alt="The 5 Cup Logo" class="w-full h-full object-contain" loading="lazy"/>
        </div>
        <h1 class="text-lg sm:text-xl font-bold text-[#242424]">The 5 Cup</h1>
      </a>

      <div class="hidden md:flex items-center gap-6 lg:gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-base font-semibold relative transition-colors ${
              isActive(link.href)
                ? 'text-[#CB9D36]'
                : 'text-[#242424]/70 hover:text-[#CB9D36]'
            }`}
          >
            {link.label}
            {isActive(link.href) && (
              <span class="absolute -bottom-1 left-0 w-full h-0.5 bg-gradient-to-r from-[#CB9D36] to-[#0A4A2E]"></span>
            )}
          </a>
        ))}

        <a
          href="https://www.helloasso.com"
          target="_blank"
          class="bg-gradient-to-r from-[#CB9D36] to-[#0A4A2E] text-[#FFFEF8] px-6 py-2 rounded-full font-semibold text-base hover:scale-105 transition-transform duration-300 shadow-md"
        >
          Billetterie
        </a>
      </div>

      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg hover:bg-[#242424]/5 transition-colors"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="w-6 h-6 text-[#242424]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg id="close-icon" class="w-6 h-6 text-[#242424] hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-3">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class={`block py-2 px-4 text-base font-semibold rounded-lg transition-colors ${
            isActive(link.href)
              ? 'text-[#CB9D36] bg-[#CB9D36]/10'
              : 'text-[#242424]/70 hover:text-[#CB9D36] hover:bg-[#242424]/5'
          }`}
        >
          {link.label}
        </a>
      ))}
      <a
        href="https://www.helloasso.com"
        target="_blank"
        class="block text-center bg-gradient-to-r from-[#CB9D36] to-[#0A4A2E] text-[#FFFEF8] px-6 py-3 rounded-full font-semibold text-base shadow-md"
      >
        Billetterie
      </a>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuButton?.addEventListener('click', () => {
    const isOpen = !mobileMenu?.classList.contains('hidden');

    if (isOpen) {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    } else {
      mobileMenu?.classList.remove('hidden');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
    }
  });
</script>
