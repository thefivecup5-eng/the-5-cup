---
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'The 5 Cup', description = 'Compétition de football - 25 avril 2026' } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="min-h-screen flex flex-col">
  <main class="flex-1">
    <slot />
  </main>
  <Footer />
</body>
</html>
